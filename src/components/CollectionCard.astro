---
import ActionBTN from "./ActionBTN.astro";

const { title, artist, cover, id } = Astro.props;
---

<div class="card collection-card h-100">
  <div class="collection-card__image">

    <img
      src={cover}
      alt={`${title} album cover`}
      onerror="this.onerror=null; this.src='/altrecord.jpeg';"
    />

    <!-- ðŸ‘‡ Wrap button -->
    <div class="collection-card__action">
      <ActionBTN id={`collection-${id}`} />
    </div>

  </div>

  <div class="collection-card__meta">
    <h5 class="collection-card__title">{title}</h5>
    <p class="collection-card__artist">{artist}</p>
  </div>
</div>

